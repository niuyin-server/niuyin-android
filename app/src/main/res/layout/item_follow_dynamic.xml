<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    tools:context="com.roydon.niuyin.ui.adapter.FollowDynamicAdapter">

    <!--    大头像-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_user_avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:foreground="@drawable/ripple_recommend_video_card"
                android:orientation="vertical"
                app:cardCornerRadius="32dp"
                app:cardElevation="1dp">

                <com.roydon.niuyin.widget.RoundImageView
                    android:id="@+id/iv_user_avatar"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/avatar_ganyu" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <com.roydon.niuyin.widget.RoundImageView
            android:id="@+id/iv_dynamic_dot"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_alignEnd="@id/ll_user_avatar"
            android:layout_alignBottom="@id/ll_user_avatar"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:scaleType="fitXY"
            android:src="@color/primaryRed" />

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_user_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        android:maxWidth="64dp"
        android:maxLines="1"
        android:text="昵称昵称昵称"
        android:textStyle="bold" />

</LinearLayout>