<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.roydon.niuyin.ui.activity.VideoImagePlayActivity">

    <!--    <com.hjq.bar.TitleBar-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        app:leftIcon="@drawable/ic_back_b"-->
    <!--        app:title="" />-->

    <!-- 16:10 视频-->
    <com.hjq.widget.layout.RatioFrameLayout
        android:id="@+id/rl_screen_scale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        app:sizeRatio="1.6">

        <com.zhpan.bannerview.BannerViewPager
            android:id="@+id/bannerViewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/t_test_title"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:layout_collapseMode="pin" />

        <com.hjq.bar.TitleBar
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            app:backButton="false"
            app:barStyle="transparent"
            app:layout_collapseMode="pin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <com.hjq.widget.square.SquareImageView
                    android:id="@+id/iv_menu_back"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_back" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_menu_nickname"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:gravity="start|center"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <com.hjq.widget.square.SquareImageView
                    android:id="@+id/iv_menu_list"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_icon_grey"
                    android:padding="8dp"
                    android:src="@drawable/ic_list_w" />

            </LinearLayout>

        </com.hjq.bar.TitleBar>

        <!--        <com.youth.banner.Banner-->
        <!--            android:id="@+id/banner"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            app:banner_indicator_gravity="center"-->
        <!--            app:banner_indicator_normal_color="@color/white"-->
        <!--            app:banner_indicator_normal_width="30dp"-->
        <!--            app:banner_indicator_radius="5dp"-->
        <!--            app:banner_indicator_selected_color="@color/primaryRed"-->
        <!--            app:banner_indicator_selected_width="30dp"-->
        <!--            app:banner_indicator_space="10dp"-->
        <!--            app:banner_loop_time="5000" />-->

    </com.hjq.widget.layout.RatioFrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_slide_b" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.flyco.tablayout.SlidingTabLayout
                android:id="@+id/slidingTabLayout"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                app:tl_indicator_color="@color/primaryRed"
                app:tl_tab_padding="20dp"
                app:tl_tab_space_equal="true"
                app:tl_textSelectColor="@color/white"
                app:tl_textUnselectColor="@color/black"
                tl:tl_indicator_margin_left="3dp"
                tl:tl_indicator_margin_right="3dp"
                tl:tl_indicator_style="BLOCK" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:src="@drawable/ic_category_b" />
    </LinearLayout>

    <View style="@style/HorizontalLineStyle" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" />

</LinearLayout>